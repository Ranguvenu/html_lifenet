<div id="mtn-image" class="bg-grey mb-4 w-100 text-center">
    <img src="/payment/gateway/mtnafrica/pix/img.png" title="{{#str}} pluginname, paygw_mtnafrica {{/str}}" alt="{{#str}} pluginname, paygw_mtnafrica {{/str}}">
</div>
<div class="text-center"><span>{{#str}} phoneconfirm, paygw_mpesakenya {{/str}}</span></div>
{{#phone}}
<div class="text-center">
    <label for="existing" class="pr-3">
        <input type="radio" id="existing" class="choose-mobile" value="mobile" onclick="(function(e){ require('core_payment/gateways_modal').checkRadio(event) })(event)" name="mtnnumber" />
        {{{phone}}}
    </label>
    <label for="other">
        <input type="radio" id="other" class="choose-mobile" value="other" onclick="(function(e){ require('core_payment/gateways_modal').checkRadio(event) })(event)" name="mtnnumber" />
        Other
    </label>
    <div style="text-align: -webkit-center;"></div><input type="text" name="mobilenumber" class="mtnnumber-mobile" onkeypress="return event.charCode >= 48 && event.charCode <= 57" style="display: none;"></div>
</div>
{{/phone}}
{{^phone}}
<div class="text-center">
    <input type="text" name="mobilenumber" class="mtnnumber-mobile" onkeypress="return event.charCode >= 48 && event.charCode <= 57" >
</div>
{{/phone}}
<div class="bg-grey mb-2 w-100 text-center">{{#str}} country, moodle {{/str}}</div>
<div id="mtn-country" class="mb-2 w-100 text-center">{{{country}}}</div>
<div class="bg-grey mb-2 w-100 text-center">{{#str}} privacy:metadata:database:payments:amount, payment {{/str}}</div>
<div id="mtn-extra" class="bg-grey rounded mb-2 w-100 text-center">
    <h4>{{{cost}}} {{{currency}}}</h4>
</div>
<div class="mb-2 w-100 text-center font-italic">{{#str}} warning_phone2, paygw_mtnafrica {{/str}}
    <a href="{{{url}}}" title="profile">{{#str}} profile, paygw_mtnafrica {{/str}}</a>.</br>
    {{#str}} warning_phone2, paygw_mtnafrica {{/str}}
    </div>
<div class="text-center">
    <form id="mtn-form" action="/payment/gateway/mtnafrica/callback.php" method="post">
        <input type="submit" value="{{#str}} proceed, moodle {{/str}}" id="mtn-pay" class="mtn-pay btn btn-primary" data-for="enablepay" disabled>
        <input type="submit" value="{{#str}} cancel, moodle {{/str}}" id="mtn-cancel" class="mtn-pay btn btn-secondary" data-for="enablepay">
    </form>
</div>
<div id="mtn-out" class="bg-grey rounded mb-2 w-100 text-center"></div>
