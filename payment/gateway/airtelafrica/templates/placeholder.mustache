{{!
    @template paygw_airtelafrica/airtel_placeholder

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json): {}
}}
<div id="airtel-image" class="bg-grey mb-4 w-100 text-center">
    <img src="/payment/gateway/airtelafrica/pix/img.png" title="{{#str}} pluginname, paygw_airtelafrica {{/str}}" alt="{{#str}} pluginname, paygw_airtelafrica {{/str}}">
</div>
<!--<div class="bg-grey mb-2 w-100 text-center">{{#str}} phone2, moodle {{/str}}</div>
<div id="airtel-phone" class="mb-2 w-100 text-center"></div>-->

<div class="text-center"><span>{{#str}} phoneconfirm, paygw_airtelafrica {{/str}}</span></div>
{{#phone}}
<div class="text-center">
    <label for="existing" class="pr-3">
        <input type="radio" id="existing" class="choose-mobile" value="mobile" onclick="(function(e){ require('core_payment/gateways_modal').checkRadio(event) })(event)" name="airtelnumber" />
    {{{phone}}}
    </label>
    <label for="other">
        <input type="radio" id="other" class="choose-mobile" value="other" onclick="(function(e){ require('core_payment/gateways_modal').checkRadio(event) })(event)" name="airtelnumber" />
        Other
    </label>
    <div style="text-align: -webkit-center;"><input type="text" name="mobilenumber" class="mpesa-mobile" onkeypress="return event.charCode >= 48 && event.charCode <= 57" style="display: none;"></div>
</div>
{{/phone}}
{{^phone}}
<div class="text-center">
    <input type="text" name="mobilenumber" class="mpesa-mobile" onkeypress="return event.charCode >= 48 && event.charCode <= 57" >
</div>

{{/phone}}

<div class="bg-grey mb-2 w-100 text-center">{{#str}} country, moodle {{/str}}</div>
<div id="airtel-country" class="mb-2 w-100 text-center"><h4>{{{country}}}</h4></div>
<div class="bg-grey mb-2 w-100 text-center">{{#str}} privacy:metadata:database:payments:amount, payment {{/str}}</div>
<div id="airtel-extra" class="bg-grey rounded mb-2 w-100 text-center">
    <h4>{{{cost}}} {{{currency}}}</h4>
</div>
<div class="mb-2 w-100 text-center font-italic">{{#str}} warning_phone1, paygw_airtelafrica {{/str}} 
    <a href="{{{url}}}/user/edit.php" title="profile">profile page</a>.</br>
    {{#str}} warning_phone2, paygw_airtelafrica {{/str}} </div>
<div class="text-center">
    <form id="airtel-form" action="/payment/gateway/airtelafrica/continue.php" method="post">
        <input type="submit" value="{{#str}} proceed, moodle {{/str}}" id="airtel-pay" class="airtel-pay btn btn-primary" data-for="enablepay">
        <input type="submit" value="{{#str}} cancel, moodle {{/str}}" id="airtel-cancel" class="airtel-pay btn btn-secondary" data-for="enablepay">
    </form>
</div>
<div id="airtel-out" class="bg-grey rounded mb-2 w-100 text-center"></div>
